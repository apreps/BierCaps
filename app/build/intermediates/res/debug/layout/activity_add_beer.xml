<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@color/cream"
    tools:context="com.example.biercaps.AddBeer" >

    <TextView
        android:id="@+id/text_beer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_beer_name"
        android:textColor="@color/dark_blue"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/insert_beer_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/round_corners_dark_blue"
        android:gravity="center"
        android:inputType="text" >
    </EditText>

    <TextView
        android:id="@+id/text_beer_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_beer_country"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/insert_beer_country"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/round_corners_dark_blue"
        android:gravity="center"
        android:inputType="text" >
    </EditText>

    <TextView
        android:id="@+id/text_beer_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_beer_notes"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/insert_beer_notes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/round_corners_dark_blue"
        android:gravity="center"
        android:inputType="text" >
    </EditText>

    <TextView
        android:id="@+id/text_beer_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_beer_rating"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RatingBar
        android:id="@+id/ratingBarAddBeer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="0.5" />

    <Button
        android:id="@+id/button_add_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/camera"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/button_black_white"/>

    <ImageView
        android:id="@+id/imageBeerCap"
        android:layout_gravity="center_horizontal"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/orange">

        <Button
            android:id="@+id/button_go_back_add_beer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button_black_white"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:text="@string/go_back"/>

        <Button
            android:id="@+id/button_add_new_beer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button_black_white"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:text="@string/button_add_beer"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/Li/AndroidstudioProjects/code1/app/src/main/res/layout/activity_add_beer.xml -->